    .hamburger {
		padding: .5rem; 
		cursor: pointer;
        width: 2rem;
        height: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        justify-self: end;
        grid-column: 3;
	}

	.hamburger .line {
		display: block;
		width: 100%;
		height: .22rem;
		background-color: #555555;
